<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:AudioDemos.Controls"
             x:Class="AudioDemos.Views.PlayLibraryAudioPage"
             Unloaded="OnContentPageUnloaded"
             Title="Play library audio">
    <Grid RowDefinitions="*,Auto">
        <controls:Audio x:Name="audio" />
        <Button Grid.Row="1"
                Text="Show Audio Library"
                Margin="10"
                HorizontalOptions="Center"
                Clicked="OnShowAudioLibraryClicked" />
    </Grid>
</ContentPage>
